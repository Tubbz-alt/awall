{
	"description": "Router",
	"zone": {
		"lan": { "iface": "$adp_lan_ifaces", "addr": "$adp_lan_addrs" }
	},
	"filter": [
		{
			"in": "wan",
			"dest": "$adp_lan_private_addrs",
			"action": "drop"
		}
	],
	"policy": [ { "in": "lan", "out": "wan" } ],
	"snat": [ { "out": "wan", "src": "$adp_lan_private_addrs" } ]
}
